<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	default-lazy-init="true">
	<!-- SpyMemcached客户端 -->
	<bean id="slMemcachedClient" class="com.shanlin.framework.cache.SpyMemcachedClient">
		<property name="memcachedClient">
			<bean class="net.spy.memcached.spring.MemcachedClientFactoryBean">
				<property name="servers" value="${memcached.url}" />
				<!-- 默认是TEXT -->
				<property name="protocol" value="${memcached.protocol}" />
				<!-- 默认是ARRAY_MOD -->
				<property name="locatorType" value="${memcached.locatorType}" />
				<!-- 默认是2500毫秒 -->
				<property name="opTimeout" value="${memcached.opTimeout}" />
			</bean>
		</property>
		<property name="updateTimeout" value="${memcached.updateTimeout}"/>
		<property name="shutdownTimeout" value="${memcached.shutdownTimeout}"/>
	</bean>
</beans>